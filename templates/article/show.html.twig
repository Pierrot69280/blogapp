{% extends 'base.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block body %}
<div class="container justify-content-center">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ article.name }}
                        <a class="btnReturn btn btn-dark" href="{{ path("app_articles") }}">
                            <i class="bi bi-arrow-return-left"></i>
                        </a>
                    </h5>

                    <hr>

                    <p class="card-text">{{ article.description }}</p>

                    <hr>
                    <a class="btn" href="{{ path('app_delete', {id:article.id} ) }}"><i class="bi bi-trash"></i></a>
                    <a class="btn" href="{{ path('app_edit', {id:article.id} ) }}"><i class="bi bi-pencil-square"></i></a>


                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
